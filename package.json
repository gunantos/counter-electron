{
  "name": "counter",
  "version": "1.0.0",
  "description": "Aplikasi Counter by APP KITA",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "build"
  },
  "build": {
    "appId": "appkita.counter.com",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "publisherName": "APP KITA",
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gunantos",
        "repo": "counter-electron",
        "vPrefixedTagName": true,
        "private": true,
        "releaseType": "draft"
      }
    ]
  },
  "repository": "https://github.com/gunantos/counter-electron.git",
  "keywords": [],
  "author": "Gunanto Simamora",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-pos-printer": "^1.2.0"
  }
}
